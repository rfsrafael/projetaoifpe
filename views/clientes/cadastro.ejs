<%- include("../partials/header.ejs") %>
<h1><%= title %></h1>
<hr>
<form method="POST" action="/clientes/cadastro">
    <input type="hidden" name="id" value="<%= cliente.id %>">
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input required value="<%= cliente.nome %>" class="form-control" type="text" name="nome">
    </div>
    <div class="mb-3">
        <label class="form-label">Endere√ßo</label>
        <input required value="<%= cliente.endereco %>" class="form-control" type="text" name="endereco">
    </div>
    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input required value="<%= cliente.email %>" class="form-control" type="email" name="email">
    </div>
    <div class="mb-3">
        <label class="form-label">Telefone</label>
        <input required value="<%= cliente.telefone %>" class="form-control" type="text" name="telefone">
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
<br><br><a href="/clientes">Voltar</a>
